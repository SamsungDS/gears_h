        nld1 -> nlrc: {style: {stroke: "#000000"; font-color: black}}
        nld2 -> nlrc: {style: {stroke: "#000000"; font-color: black}}
    }

    mp_block -> nl_block: {style: {stroke: "#000000"; font-color: black}}
}
